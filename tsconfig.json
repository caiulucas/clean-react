{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {    
      "@tests/*": ["../tests/*"],
      "@data/*": ["./data/*"],
      "@domain/*": ["./domain/*"],
      "@infra/*": ["./infra/*"]
    },
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["src", "tests"],
  "exclude": ["tests/e2e/cypress"]
}